<script src="http://maps.googleapis.com/maps/api/js?v=3.28&libraries=places"></script>

<h2> Places I've Traveled To</h2>

<div class="w-container">
  <br>
  <%= form_for :place, url: add_place_to_user_places_path, method: :post, remote: true do |f|%>
    <%= f.text_field :name,
        placeholder: "Place name",
        class: "form-control",
        id: 'place-input'
    %>
    <%= f.text_field :country, id: 'country' %>
    <%= f.text_field :google_place_id, id: 'place_id' %>
    <%= f.submit 'Add place', class: 'btn btn-default' %>
  <% end %>
</div>

<div id='places'>
  <%= render partial: 'places', locals: { places: @places } %>
</div>
