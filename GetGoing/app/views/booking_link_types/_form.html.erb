<%= form_for @booking_link_type, remote: true do |f| %>
<div class="modal-body">
  <div class='form-group'>
    <%= f.label :name, 'Name (will be displayed on the booking links block in the Post page, e.g. Restaurant, Hotel...)' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :url_type, 'Url type name (hashtag). In order to work correctly, it should be lower case, one word in singular form. E.g. "hotel"' %>
    <%= f.text_field :url_type, class: 'form-control' %>
  </div>

  <div class="md-checkbox">
    <%= f.check_box :is_accommodation %>
    <%= f.label :is_accommodation  %>
  </div>

</div>
<div class="modal-footer">
  <%= f.submit 'Save', class: "btn btn-info" %>
  <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
</div>
<% end %>
