<table class='table table-striped table-bordered table-hover'
  <thead>
    <tr>
      <th> BookingLink Type </th>
      <th> Url Type (hashtag) </th>
      <th> Action </th>
    </tr>
  </thead>
  <tbody>
    <% @booking_link_types.each do |booking_link_type| %>
      <tr>
        <td>
          <%= booking_link_type.name %>
        </td>
        <td>
          <%= booking_link_type.url_type %>
        </td>
        <td>
          <% if policy(booking_link_type).update? %>
            <%= link_to edit_booking_link_type_path(booking_link_type), remote: true, class: 'clear_link', title: 'Click here to remove booking link type' do %>
              <%= icon "pencil", title: 'Click here to remove booking link type' %>
            <% end %>
          <% end %>
          <% if policy(booking_link_type).destroy? %>
            <%= link_to booking_link_type, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: 'clear_link', title: 'Click here to remove booking link type' do %>
              <%= icon "times", title: 'Click here to remove booking link type' %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
