<table class='table table-striped table-bordered table-hover'
  <thead>
    <tr>
      <th> Booking Link </th>
      <th> User </th>
      <th> Post </th>
      <th> Clicked by author?</th>
      <th> Affiliate Revenue Generated </th>
    </tr>
  </thead>
  <tbody>
    <% @booking_links.each do |booking_link| %>
      <tr>
        <td>
          <%= link_to truncate(booking_link.url_title, length: 40), booking_link.url, target: :_blank%>
        </td>
        <td>
          <%= "#{booking_link.response.user.first_name} #{booking_link.response.user.last_name}" %>
        </td>
        <td>
          <%= link_to booking_link.post.title, booking_link.post %>
        </td>
        <td>
          <center>
            <%= booking_link.clicked_by_author_at_display %>
          </center>
        </td>
        <td>
          <center>
            <%= humanized_money_with_symbol booking_link.affiliate_revenue %>
            <%= link_to edit_affiliate_revenue_booking_link_path(booking_link), remote: true, class: 'clear_link', title: 'Click here to edit affiliate revenue value' do %>
              <%= icon "pencil", title: 'Click here to edit affiliate revenue value' %>
            <% end %>
          </center>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<center>
  <%= will_paginate @booking_links %>
</center>
