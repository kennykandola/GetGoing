<table class='table table-striped table-bordered table-hover'
  <thead>
    <tr>
      <th> Post title </th>
      <th> Status </th>
      <th> <center> Responses </center> </th>
      <th> <center> Claims </center> </th>
      <th> <center> Created at </center> </th>
      <th> <center> Last activity at </center> </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to truncate(post.title, length: 40), post, target: :_blank%>
          <% if @user.invited_to?(post) %>
            (Invited)
          <% end %>
        </td>
        <td>
          <%= post.current_status %>
        </td>
        <td>
          <center>
            <%= post.responses.count %>
          </center>
        </td>
        <td>
          <center>
            <%= post.claims.count %>
          </center>
        </td>
        <td>
          <center>
            <%= local_time_ago(post.created_at) %>
          </center>
        </td>
        <td>
          <center>
            <%= local_time_ago(post.updated_at) %>
          </center>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<center>

  <div class="pagination-container">
    <div class="digg_pagination">
      <%= will_paginate @posts, remote: true, params: { anchor: '3'} %>
    </div>
  </div>
</center>
