  <strong>Posted By</strong>
<li><%=  @post.user.first_name %></li>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>


<br><br>


<% if @post.claimed_users.include?(current_user.email) %>
    <br>You've claimed this post</br>
    <%= link_to "Click Here to Remove Your Claim", { controller: :posts, action: :claim_remove, post_id: @post.id, user_id: current_user.id },{ class: 'btn btn-default'} %>
<% else %>
    <%= link_to "Claim This Post", { controller: :posts, action: :claim, post_id: @post.id, user_id: current_user.id },{ class: 'btn btn-default'} %>
<% end %>


<h2>Responses</h2>

<div id="responses">

  <%= render @post.responses %>

</div>

<div id="responses">



  <% if @post.user == current_user && @post.responses.where(top: true).size >= 1 %>
      <%= link_to "finalize top", { controller: :responses, action: :top, post_id: @post.id },{ class: 'btn btn-default'} %>


  <% else %>

  <% end %>
</div>

<%= render 'responses/new', post: @post %>

