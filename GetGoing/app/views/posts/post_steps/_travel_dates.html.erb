<%= form_for @post, url: wizard_path(:travel_dates), method: :put, remote: true do |f| %>
<div class="modal-body">
  <center>
    <p>
      When Will You Be Traveling?
    </p>
  </center>
  <br>
  <div class="input-daterange input-group" id="datepicker">
    <%= f.text_field :travel_start, class: "input-sm form-control" %>
    <span class="input-group-addon">to</span>
    <%= f.text_field :travel_end, class: "input-sm form-control" %>
  </div>
</div>
<div class="modal-footer">
  <%= link_to 'Back', wizard_path(:people_total), remote: true, class: 'btn btn-default btn-wizard-control btn-wizard-back pull-left' %>
  <%= f.submit "Continue", class: 'btn btn-default btn-wizard-control pull-right' %>
</div>
<% end %>
