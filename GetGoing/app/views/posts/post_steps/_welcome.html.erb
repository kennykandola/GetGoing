<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header wizard" id='modal-header' hidden="hidden">
      <center>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <div class="progressbar"></div>
        <h3>Destinations</h3>
      </center>
    </div>
    <div id="modal-step-content">
      <div class="modal-body wizard">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <div class="wizard-logo">
          <%=image_tag "white_logo_transparent_background.png"%>
        </div>
        <div class="wizard-content">
          <p>
            Great, we have <%=@place.advisors_number %> advisors that have either traveled to or lived in <%=@place.place_name %>.
          </p>
        </div>
        <%= link_to 'Next', wizard_path(:destinations), remote: true, class: 'btn btn-default btn-wizard' %>
      </div>
    </div>
  </div>
</div>
