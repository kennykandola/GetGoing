<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header wizard-header">
      <center>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Destinations</h3>
      </center>
    </div>
    <div class="modal-body">

      Any other cities you plan on visiting on your trip to (destination)?
      <%= text_field_tag 'name', nil,
          placeholder: "Place name",
          class: "form-control",
          id: 'place-input'
      %>
      <%= form_for @post, url: wizard_path(:destinations), method: :put, remote: true do |f| %>
        <div id='modal-places'>

          <%= f.fields_for :places, @places do |place|%>
            <%= render 'posts/post_steps/place_fields', f: place %>

          <% end %>
          <%= f.fields_for :places, Place.new do |place|%>
            <%= render 'posts/post_steps/place_fields', f: place %>
            <div class='links'>
              <%= link_to_add_association 'Add one more place', f, :places, class: 'btn btn-default' %>
            </div>
          <% end %>
        </div>
        <%= f.submit "Continue" %>
      <% end %>
    </div>
  </div>
</div>
