<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <center>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Invite friend</h3>
      </center>
    </div>
    <div class="modal-body">
      <%= form_tag(autocomplete_users_path, method: :get, class: "form-inline", role: 'search') do %>
        <div class="input-group">
          <%= text_field_tag :query,
              params[:query],
              id: 'users_search',
              autocomplete: :off,
              placeholder: 'Search',
              class: 'form-control autocomplete-input' %>
          <div class="input-group-btn search-panel">
            <%= link_to 'Clear', root_url, class: "btn btn-default" %>
            <%= submit_tag 'Search', name: nil, class: "btn btn-default" %>
          </div>
        </div>
      <% end %>

      <%= form_for [@post, PostUser.new] do |f| %>
        <%= f.text_field :email, required: true %>
        <%= f.submit 'Invite' %>
      <% end %>
      <div id="shareBtn" class="btn btn-success clearfix">Send Dialog</div>
      <div id="shareBtn2" class="btn btn-success clearfix">Share Dialog</div>
      <a href='fb-messenger://share/?link= <%= request.original_url %>&app_id=<%= ENV["FACEBOOK_APP_ID"] %>'>Send In Messenger App on Mobile</a>

    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>
  </div>
</div>
