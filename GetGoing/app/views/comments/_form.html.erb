<%= form_for [post_response, post_response.comments.build], remote: true, hidden: '' do |f| %>
  <%= f.text_area :body %>
  <br>
  <% if post_response.comments.count == 0 %>
    <%= f.label 'discussion privacy settings'%>
    <%= f.select :discussion_privacy, Response.discussion_privacies.keys.map { |privacy| [privacy.humanize.split.first, privacy] } %>
  <% end %>

  <%= f.submit 'Add comment'%>
<% end %>
